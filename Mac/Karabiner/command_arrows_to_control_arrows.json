{
  "title": "command arrows to control arrows shortcut mappings",
  "rules": [
    {
      "description": "command+left_arrow to control+left_arrow",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_arrow",
            "modifiers": {
              "mandatory": [
                "left_command"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": "control"
