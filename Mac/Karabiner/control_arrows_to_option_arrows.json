{
  "title": "control arrows to option arrows shortcut mappings",
  "rules": [
    {
      "description": "control+left_arrow to option+left_arrow",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_arrow",
            "modifiers": {
              "mandatory": [
                "left_control"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": "option"
            }
          ]
        }
      ]
    },
